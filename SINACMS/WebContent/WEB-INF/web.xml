<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>main.jsp</welcome-file>
    <welcome-file>login.jsp</welcome-file>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>CheckcodeServlet</servlet-name>
    <servlet-class>com.sina.cms.backend.view.CheckcodeServlet</servlet-class>
    <init-param>
      <param-name>width</param-name>
      <param-value>44</param-value>
    </init-param>
    <init-param>
      <param-name>height</param-name>
      <param-value>20</param-value>
    </init-param>
    <init-param>
      <param-name>number</param-name>
      <param-value>4</param-value>
    </init-param>
    <init-param>
      <param-name>codes</param-name>
      <param-value>ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890</param-value>
    </init-param>
  </servlet>
  <listener>
    <listener-class>com.sina.cms.filter.ServerStartupListener</listener-class>
  </listener>
  <filter>
    <display-name>BaseFilter</display-name>
    <filter-name>BaseFilter</filter-name>
    <filter-class>com.sina.cms.filter.BaseFilter</filter-class>
    <init-param>
      <param-name>excludedPages</param-name>
      <param-value>/index.jsp</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>BaseFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <display-name>LoginFilter</display-name>
    <filter-name>LoginFilter</filter-name>
    <filter-class>com.sina.cms.filter.LoginFilter</filter-class>
    <init-param>
      <param-name>excludedPages</param-name>
      <param-value>/backend/index.jsp,/backend/login,/backend/images/,/backend/css/,/backend/js/</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/backend/*</url-pattern>
  </filter-mapping>
  <error-page>
    <error-code>400</error-code>
    <location>/error/error.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/error/error.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/error/error.jsp</location>
  </error-page>
  <session-config>
    <session-timeout>60</session-timeout>
  </session-config>
  <servlet>
    <servlet-name>InitBeanFactoryServlet</servlet-name>
    <servlet-class>com.sina.cms.backend.view.InitBeanFactoryServlet</servlet-class>
    <init-param>
      <param-name>configLocation</param-name>
      <param-value>dao.properties</param-value>
    </init-param>
    <load-on-startup>0</load-on-startup>
  </servlet>
</web-app>